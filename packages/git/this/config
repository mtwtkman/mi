[core]
	editor = "nvim"

[diff]
	tool = "nvr"

[difftool "nvr"]
	cmd = "nvr -s -d $LOCAL $REMOTE"

[init]
	defaultBranch = "main"

[merge]
	tool = "nvr"

[mergetool "nvr"]
	cmd = "nvr -s -d $LOCAL $BASE $REMOTE $MERGED -c 'wincmd J | wincmd ='"

