#!/bin/sh
here="$(dirname ${BASH_SOURCE[0]})"

module="${here}/module"
prompt="${module}/helper/prompt"
config="${module}/config"
bootstrap="${here}/bootstrap"

user_config_dir="${HOME}/.config"
if [ ! -d "${user_config_dir}" ]; then
  mkdir "${user_config_dir}"
fi

sh "${prompt}/blue.sh" "==== Start setup. ===="
sh "${module}/install_batch.sh"
sh "${module}/deploy_batch.sh"
sh "${module}/install_custom_batch.sh"
sh "${module}/deploy_custom_batch.sh"
sh "${module}/user-bin/update.sh"
sh "${prompt}/blue.sh" "==== Finish setup. ===="
